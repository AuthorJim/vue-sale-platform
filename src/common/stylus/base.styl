body, html
	height 100%
  line-height: 1
  font-weight: 200
  font-size 14px
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif

.clearfix
	display inline-block
	&:after
		display block
		visibility hidden
		content '.'
		clear both
		height 0
		line-height 0

a
	text-decoration none
	color #333
	font-size 14px
		